Map	KbdVel		"50"			Keyboard	V50
Map	KbdVel		"75"			Keyboard	V75
Map	KbdVel		"100"			Keyboard	V100
Map	KbdVel		"127"			Keyboard	V127
Map	Button 2-4		BaseKey=C0			Keyboard	
Map	Button 2-5		BaseKey=C1			Keyboard	
Map	Button 2-6		BaseKey=C2			Keyboard	
Map	Button 2-7		BaseKey=C3			Keyboard	
Map	Button 2-8		BaseKey=C4			Keyboard	
Map	BaseKey		"0"			Keyboard	C0
Map	BaseKey		"1"			Keyboard	C1
Map	BaseKey		"2"			Keyboard	C2
Map	BaseKey		"3"			Keyboard	C3
Map	BaseKey		"4"			Keyboard	C4
